<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="57dp" />

            <Button
                android:id="@+id/accountSettingsButton"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="accountSettingsButtonClick"
                android:text="Account Settings"
                app:backgroundTint="#2F9CCD" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="editProfileButtonClick"
                android:text="Edit Profile"
                app:backgroundTint="#2F9CCD" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="My Reviews"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="v     Sort"
                app:backgroundTint="#2F9CCD" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userNameRecyclerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sam N" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />

                    <ImageView
                        android:id="@+id/userScoreImage"
                        android:layout_width="102dp"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/covid_icon" />

                    <ImageView
                        android:id="@+id/userImageInput"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/picupload" />
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/businessNameRecyclerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".07"
                        android:gravity="center|top"
                        android:text="Bloomington Cafe" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_weight=".005"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/reviewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="When I entered this establishment everyone was wearing masks and every cook was wearing gloves." />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sam N" />

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />

                    <ImageView
                        android:id="@+id/userScore2"
                        android:layout_width="102dp"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_logo"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/imageInput2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/picupload" />
                </LinearLayout>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/businessName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".07"
                        android:gravity="center|top"
                        android:text="Bub's Burgers" />

                    <View
                        android:id="@+id/divider8"
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_weight=".005"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/review2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None of the employees were wearing masks and there was no sign outside requiring masks." />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>